<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<h2><%= @restaurant.phone_number %></h2>
<h2><%= @restaurant.category %></h2>
<% @restaurant.reviews.each do |review| %>
  <h3><%= review.content %></h3>
  <h3><%= review.rating %></h3>
<% end %>
<ul class="list-inline">
   <li><p> <%= link_to 'Add review', new_restaurant_review_path(@restaurant)  %></p></li>
   <li><p> <%= link_to 'Edit this restaurant', edit_restaurant_path(@restaurant)  %></p></li>
   <li><p> <%= link_to 'Delete this restaurant', restaurant_path(@restaurant), method: :delete  %></p></li>
</ul>

<%= link_to 'Back to all restaurant', restaurants_path  %>
